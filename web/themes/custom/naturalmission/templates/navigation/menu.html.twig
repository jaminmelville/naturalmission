{% import _self as menus %}
<div class='menu'>
  <i class="menu__button js-menu-button fa fa-bars" aria-hidden="true"></i>
{{ menus.menu_links(items, attributes, 0) }}
{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    {% if menu_level == 0 %}
      <ul class='menu__items'>
    {% else %}
      <ul>
    {% endif %}
    {% for item in items %}
      <li class='menu__item js-menu__item'>
        {{ link(item.title, item.url) }}
        {% if item.below %}
          {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
        {% endif %}
      </li>
    {% endfor %}
      <li class='menu__item menu__item--search js-search'>
        <input class='js-search__input menu__search-input menu__search-input--hidden' name='keys' type='text/javascript' />
        <i class='js-search__button js-menu__search-button menu__search-button fa fa-search'></i>
      </li>
    </ul>
  {% endif %}
{% endmacro %}
</div>
